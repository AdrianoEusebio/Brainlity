<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PerfilFragment"
    android:background="@color/background_item2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/textView_userEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/background_item_card"
            android:fontFamily="@font/itim"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:text="Email"
            android:textColor="@color/white"
            android:textSize="23dp"
            app:layout_constraintEnd_toEndOf="@+id/textView_userNome"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textView_userNome"
            app:layout_constraintTop_toBottomOf="@+id/textView_userNome" />

        <TextView
            android:id="@+id/textView_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100dp"
            android:background="@drawable/background_item_card"
            android:fontFamily="@font/itim"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:text="Deslogar-se"
            android:textColor="@color/white"
            android:textSize="23dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/imageView_edit2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textView_userSenha"
            app:layout_constraintTop_toBottomOf="@+id/textView_userSenha"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textView_userSenha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/background_item_card"
            android:fontFamily="@font/itim"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:text="123456"
            android:textColor="@color/white"
            android:textSize="22dp"
            app:layout_constraintEnd_toEndOf="@+id/textView_userEmail"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textView_userEmail"
            app:layout_constraintTop_toBottomOf="@+id/textView_userEmail" />

        <TextView
            android:id="@+id/textView_userNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/background_item_card"
            android:fontFamily="@font/itim"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:text="Usuario"
            android:textColor="@color/white"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView_edit"
            android:layout_width="45dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/background_item_card"
            android:src="@drawable/baseline_edit"
            app:layout_constraintBottom_toBottomOf="@+id/textView_userNome"
            app:layout_constraintStart_toEndOf="@+id/textView_userNome"
            app:layout_constraintTop_toTopOf="@+id/textView_userNome"
            app:layout_constraintVertical_bias="0.49" />

        <ImageView
            android:id="@+id/imageView_edit2"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/background_item_card"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:src="@drawable/baseline_edit"
            app:layout_constraintBottom_toBottomOf="@+id/textView_userSenha"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/textView_userSenha"
            app:layout_constraintTop_toTopOf="@+id/textView_userSenha" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>