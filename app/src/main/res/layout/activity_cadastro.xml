<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastroActivity"
    android:background="@drawable/first_background">

    <TextView
        android:id="@+id/textView_cadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Cadastro"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.119"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/viewCadastro"
        android:layout_width="368dp"
        android:layout_height="539dp"
        android:background="@drawable/second_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_cadastro"
        app:layout_constraintVertical_bias="0.472" />

    <Button
        android:id="@+id/buttonCadastrar"
        android:layout_width="157dp"
        android:layout_height="50dp"
        android:background="@color/black"
        android:text="Cadastrar"
        app:layout_constraintBottom_toBottomOf="@+id/viewCadastro"
        app:layout_constraintEnd_toEndOf="@+id/viewCadastro"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/viewCadastro"
        app:layout_constraintTop_toBottomOf="@+id/editText_cadastroSenha"
        app:layout_constraintVertical_bias="0.225" />

    <EditText
        android:id="@+id/editText_cadastroNome"
        android:layout_width="290dp"
        android:layout_height="48dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/edit_background"
        android:ems="10"
        android:hint="Nome do Usuario"
        android:paddingLeft="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/viewCadastro"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="@+id/viewCadastro"
        app:layout_constraintTop_toTopOf="@+id/viewCadastro" />

    <EditText
        android:paddingLeft="10dp"
        android:background="@drawable/edit_background"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:id="@+id/editText_cadastroEmail"
        android:layout_width="290dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/viewCadastro"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="@+id/viewCadastro"
        app:layout_constraintTop_toBottomOf="@+id/editText_cadastroNome" />

    <EditText
        android:paddingLeft="10dp"
        android:background="@drawable/edit_background"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:id="@+id/editText_cadastroSenha"
        android:layout_width="290dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Senha"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/viewCadastro"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="@+id/viewCadastro"
        app:layout_constraintTop_toBottomOf="@+id/editText_cadastroEmail" />

    <TextView
        android:textColor="#000fff"
        android:id="@+id/textView_hasCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ja tem uma conta?"
        app:layout_constraintBottom_toBottomOf="@+id/viewCadastro"
        app:layout_constraintEnd_toEndOf="@+id/viewCadastro"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/viewCadastro"
        app:layout_constraintTop_toBottomOf="@+id/buttonCadastrar"
        app:layout_constraintVertical_bias="0.045" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/viewCadastro"
        app:layout_constraintEnd_toEndOf="@+id/viewCadastro"
        app:layout_constraintStart_toStartOf="@+id/viewCadastro"
        app:layout_constraintTop_toBottomOf="@+id/textView_hasCount"
        app:layout_constraintVertical_bias="0.0"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>