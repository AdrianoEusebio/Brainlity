<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashMenuActivity"
    android:background="@drawable/first_background">

    <View
        android:id="@+id/view_cadastro"
        android:layout_width="355dp"
        android:layout_height="70dp"
        android:layout_marginTop="548dp"
        android:background="@drawable/view_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_login"
        android:layout_width="355dp"
        android:layout_height="70dp"
        android:background="@drawable/view_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/view_cadastro"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/view_cadastro"
        app:layout_constraintTop_toBottomOf="@+id/view_cadastro"
        app:layout_constraintVertical_bias="0.285" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="Cadastro"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/view_cadastro"
        app:layout_constraintEnd_toEndOf="@+id/view_cadastro"
        app:layout_constraintStart_toStartOf="@+id/view_cadastro"
        app:layout_constraintTop_toTopOf="@+id/view_cadastro" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="Login"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/view_login"
        app:layout_constraintEnd_toEndOf="@+id/view_login"
        app:layout_constraintStart_toStartOf="@+id/view_login"
        app:layout_constraintTop_toTopOf="@+id/view_login" />
</androidx.constraintlayout.widget.ConstraintLayout>