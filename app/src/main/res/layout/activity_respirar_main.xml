<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_item2"
    tools:context=".Exercicios.Respiração.RespirarMainActivity"
    tools:layout_editor_absoluteX="-14dp"
    tools:layout_editor_absoluteY="244dp">


    <TextView
        android:id="@+id/titulo_respiracao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="monospace"
        android:text="Exercicio de Respiração"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/background_item_card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulo_respiracao"
        app:layout_constraintVertical_bias="0.0">

        <NumberPicker
            android:id="@+id/minutesPicker"
            android:layout_width="100dp"
            android:layout_height="240dp"
            android:layout_gravity="center"
            android:layout_marginStart="92dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/background_item_card"
            android:backgroundTint="@color/background_item2"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titulo_info"
            app:layout_constraintVertical_bias="0.126" />

        <NumberPicker
            android:id="@+id/secondsPicker"
            android:layout_width="100dp"
            android:layout_height="240dp"
            android:layout_gravity="center"
            android:background="@drawable/background_item_card"
            android:backgroundTint="@color/background_item2"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/minutesPicker"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/minutesPicker"
            app:layout_constraintTop_toTopOf="@+id/minutesPicker"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/button_comecar"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="70dp"
            android:backgroundTint="@color/background_item5"
            android:elevation="20dp"
            android:text="Começar"
            android:textColor="@color/white"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/secondsPicker"
            app:layout_constraintHorizontal_bias="0.485"
            app:layout_constraintStart_toStartOf="@+id/minutesPicker"
            app:layout_constraintTop_toBottomOf="@+id/minutesPicker"
            app:layout_constraintVertical_bias="0.232" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_sans_extrabold"
            android:text=":"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/minutesPicker"
            app:layout_constraintEnd_toEndOf="@+id/secondsPicker"
            app:layout_constraintStart_toStartOf="@+id/minutesPicker"
            app:layout_constraintTop_toTopOf="@+id/minutesPicker" />

        <TextView
            android:id="@+id/titulo_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/itim"
            android:paddingLeft="16dp"
            android:text="A ferramenta Respirar serve para praticar a respiração regulada em momentos de estresse."
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.511"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view2"
            android:layout_width="1dp"
            android:layout_height="52dp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/minutesPicker"
            app:layout_constraintEnd_toStartOf="@+id/minutesPicker"
            app:layout_constraintTop_toTopOf="@+id/minutesPicker" />

        <View
            android:id="@+id/view3"
            android:layout_width="1dp"
            android:layout_height="52dp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/minutesPicker"
            app:layout_constraintStart_toEndOf="@+id/secondsPicker"
            app:layout_constraintTop_toTopOf="@+id/minutesPicker" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

