<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_item3"
    tools:context=".Exercicios.RespirarMainActivity"
    tools:layout_editor_absoluteX="-14dp"
    tools:layout_editor_absoluteY="244dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/resp_layout2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:background="@drawable/background_item_card"
        android:elevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resp_layout">

        <NumberPicker
            android:id="@+id/minutesPicker"
            android:layout_width="100dp"
            android:layout_height="240dp"
            android:layout_gravity="center"
            android:layout_marginStart="24dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <NumberPicker
            android:id="@+id/secondsPicker"
            android:layout_width="100dp"
            android:layout_height="240dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/minutesPicker"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/minutesPicker"
            app:layout_constraintTop_toTopOf="@+id/minutesPicker"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/text_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_sans_extrabold"
            android:text="Min"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textView6"
            app:layout_constraintStart_toStartOf="@+id/minutesPicker"
            app:layout_constraintTop_toTopOf="@+id/minutesPicker"
            app:layout_constraintVertical_bias="0.32" />

        <TextView
            android:id="@+id/text_sec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_sans_extrabold"
            android:text="Sec"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/secondsPicker"
            app:layout_constraintStart_toEndOf="@+id/minutesPicker"
            app:layout_constraintTop_toTopOf="@+id/secondsPicker"
            app:layout_constraintVertical_bias="0.321" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_sans_extrabold"
            android:text=":"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/secondsPicker"
            app:layout_constraintStart_toStartOf="@+id/minutesPicker"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/button_comecar"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/background_item4"
        android:elevation="8dp"
        android:text="Começar"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/resp_layout2"
        app:layout_constraintStart_toStartOf="@+id/resp_layout2"
        app:layout_constraintTop_toBottomOf="@+id/resp_layout2"
        app:layout_constraintVertical_bias="0.131" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/resp_layout"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:background="@color/background_item1"
        android:elevation="8dp"
        app:layout_constraintEnd_toEndOf="@+id/titulo_respiracao"
        app:layout_constraintStart_toStartOf="@+id/titulo_respiracao"
        app:layout_constraintTop_toBottomOf="@+id/titulo_respiracao">

        <TextView
            android:id="@+id/text_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_sans_extrabold"
            android:paddingLeft="15dp"
            android:paddingTop="8dp"
            android:lineSpacingExtra="5dp"
            android:paddingBottom="10dp"
            android:text="Esse exercicio serve para praticar sua respiração profunda em situações de estresse ou ansiosas."
            android:textColor="@color/white"
            android:textSize="17dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/titulo_respiracao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="monospace"
        android:text="Exercicio de Respiração"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/button_comecar"
        app:layout_constraintStart_toStartOf="@+id/button_comecar"
        app:layout_constraintTop_toBottomOf="@+id/button_comecar"
        app:layout_constraintVertical_bias="0.27" />

</androidx.constraintlayout.widget.ConstraintLayout>

